#include <iostream>

using namespace std;

int main() {
    int N;
    cin >> N;

    int A[N];

    for (int i = 0; i < N; ++i) {
        cin >> A[i];
    }

    int countNonDecreasing = 0;
    int currentLength = 1;

    for (int i = 1; i < N; ++i) {
        if (A[i] >= A[i - 1]) {
            currentLength++;
        } else {
            countNonDecreasing += (currentLength * (currentLength + 1)) / 2;
            currentLength = 1;
        }
    }

    countNonDecreasing += (currentLength * (currentLength + 1)) / 2;

    cout << countNonDecreasing << "\n";

    return 0;
}
